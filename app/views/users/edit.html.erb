<% provide(:title, "Edit user") %>
<h1>Update your RoboProfile</h1>


    <%= form_for(@user) do |f| %>
      <%= render "shared/error_msgs" %>

     <div class= "labelName" >
      <%= f.label :name, "Name" %>
    </div>
    <div class= "textField">
      <%= f.text_field :name %>
    </div>

    <div class= "labelName" >
      <%= f.label :email, "Email"%>
    </div>

    <div class= "textField">
      <%= f.email_field :email %>
    </div>

    <div class= "labelName" >
      <%= f.label :password, "RoboPassword" %>
    </div>
    <div class= "textField">
      <%= f.password_field :password %>
    </div>

    <div class= "labelName" >
    <%= f.label :password_confirmation, "RoboPassword Confirmation" %>
    </div>
    <div class= "textField">
      <%= f.password_field :password_confirmation, class: "textField" %>
    
        </br>

      <%= f.submit "Lets RoboSave", class: "btn btn-primary"  %>
    </div>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target=_blank>change</a>
    </div>
