<% provide(:title, @user.name) %>

<div class= "row">
	<aside class = "col-md-4">
		<section class = "user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>

	<% if @user.posts.any? %>
		<h3> RoboPosts (<%= @user.posts.count %></h3>
		<ol class = 'posts'>
			<%= render @posts %>
		</ol>
		<% end %>
	</div>
</div>

